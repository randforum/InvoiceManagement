@model EmailSettingsVM

@{
    ViewBag.PageHeader = "Email Settings";
}

<div class="row">
    <div class="col-md-12">
        <form  method="post" asp-action="EmailSettingUpdate" asp-controller="Webmaster" asp-antiforgery="true">
            <span class="text-danger"> @ViewBag.MsgShow</span>
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="EmailSettings.ID" />
            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label> From Email </label>
                        <input type="email" asp-for="EmailSettings.FromEmail" class="form-control" />

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label> Username </label>
                        <input asp-for="EmailSettings.Username" class="form-control" />

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label> Email Password </label>
                        <input type="text" asp-for="EmailSettings.EmailPassword" class="form-control" />

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Host</label>
                        <input type="text" asp-for="EmailSettings.Host" class="form-control" />

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label> Port No</label>
                        <input type="number" asp-for="EmailSettings.PortNo" class="form-control" />

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Enable SSL (True / False)</label>
                        <select asp-for="EmailSettings.EnableSsl" class="form-control" asp-items="Model.TFList"></select>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Email Subject</label>
                        <input type="number" asp-for="EmailSettings.Subject" class="form-control" />
                    </div>
                </div>
              
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" value="Update Details" class="btn btn-primary" />

                </div>
            </div>
        </form>

    </div>
</div>
