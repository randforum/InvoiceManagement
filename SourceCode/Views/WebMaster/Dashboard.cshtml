@inject ICustomerService _customerService;
@inject IInvoiceService _invoiceService;
@inject IProductService _productService;
<div class="row">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Total Sales</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"> @_invoiceService.TotalSales() </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-link fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Dues</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"> @_invoiceService.TotalDues()</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total Paid </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@_invoiceService.TotalPaid() </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Customers</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"> @_customerService.TotalCustomers() </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-address-book fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Total Products</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"> @_productService.TotalProducts()</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Invoices </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@_invoiceService.TotalInvoices() </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-6">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Customers</h6>
            </div>
            <div class="card-body">
                @if (_customerService.Top5CustomerList() != null && _customerService.Top5CustomerList().Count() > 0)
    {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm datatable">
                    <thead>
                        <tr>
                            <th scope="col">
                                ID
                            </th>
                            <th scope="col">
                                Name
                            </th>
                            <th scope="col">Email </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _customerService.Top5CustomerList())
            {
                <tr>
                    <td>
                        @item.ID


                    </td>
                    <td>
                        @item.Name


                    </td>
                    <td>
                        @item.Email

                    </td>

                </tr>

}


                    </tbody>
                </table>
            </div>
            <a asp-action="CustomerMaster" asp-controller="Customer" class="btn btn-link btn-sm">see full list</a>
}
else
{
            <div class="alert alert-info">
                No Data is found.
            </div>

}
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Products</h6>
            </div>
            <div class="card-body">
                @if (_productService.Top5ProductList() != null && _productService.Top5ProductList().Count() > 0)
    {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name </th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _productService.Top5ProductList())
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @item.ProductUnitPrice
                    </td>

                </tr>

}


                    </tbody>
                </table>
            </div>

            <a asp-action="ProductMaster" asp-controller="Product" class="btn btn-link btn-sm" >see full list</a>

}
else
{
            <div class="alert alert-info">
                No Data is found.
            </div>

}
            </div>
            </div>
                
              
            </div>
        </div>


